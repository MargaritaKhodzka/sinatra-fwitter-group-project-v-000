<h1>Your tweet</h1>

<%= @tweet.content %>

<a href="/tweets/<%= @tweet.id %>/edit">Edit tweet</a>

<form action="/tweets/<%= @tweet.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="text" name="content">
  <input type="submit" value="submit">
</form>
